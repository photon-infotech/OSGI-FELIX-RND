<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.sun.jersey.samples.jerseywithswagger.build</groupId>
  <artifactId>deployment</artifactId>
  <version>1.15</version>
  <packaging>pom</packaging>
  <name>Jersey Sample WAR</name>
  <properties>
    <phresco.ldap.basedn>ou=users,o=photon,dc=photoninfotech,dc=com</phresco.ldap.basedn>
    <phresco.ldap.url>ldap://172.16.1.19:389</phresco.ldap.url>
    <phresco.repo.url>http://172.16.18.178:8080/nexus/content/groups/public/</phresco.repo.url>
    <phresco.authenticate.url>http://172.16.18.174:7070/auth</phresco.authenticate.url>
    <phresco.db.host>172.16.17.227</phresco.db.host>
    <phresco.ldap.login.attribute>uid</phresco.ldap.login.attribute>
    <phresco.db.name>phresco-dev</phresco.db.name>
    <phresco.service.url>http://localhost:3030/service/rest/api</phresco.service.url>
    <phresco.db.port>27017</phresco.db.port>
    <phresco.db.defaultcollection>phresco</phresco.db.defaultcollection>
    <phresco.twitter.service.url>http://twitter.com/statuses/user_timeline/photoninfotech.json</phresco.twitter.service.url>
  </properties>
  <dependencies>
    <dependency>
      <groupId>com.sun.jersey.samples</groupId>
      <artifactId>jerseywithswagger</artifactId>
      <version>1.15</version>
      <type>war</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
      <version>4.2.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.compendium</artifactId>
      <version>4.2.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.sun.jersey</groupId>
      <artifactId>jersey-servlet</artifactId>
      <version>1.15</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <repositories>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Maven Repository Switchboard</name>
      <url>http://repo1.maven.org/maven2</url>
    </repository>
  </repositories>
  <profiles>
    <profile>
      <id>cobertura</id>
      <activation>
        <property>
          <name>cobertura</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>cobertura-maven-plugin</artifactId>
          </plugin>
        </plugins>
      </build>
      <dependencies>
        <dependency>
          <groupId>com.sun.jersey</groupId>
          <artifactId>jersey-servlet</artifactId>
          <version>1.17.1</version>
          <classifier>cobertura</classifier>
          <scope>provided</scope>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <dependencies>
        <dependency>
          <groupId>com.sun.jersey</groupId>
          <artifactId>jersey-servlet</artifactId>
          <version>1.15</version>
          <scope>provided</scope>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>release</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-gpg-plugin</artifactId>
            <version>1.1</version>
            <executions>
              <execution>
                <id>sign-artifact</id>
                <phase>verify</phase>
                <goals>
                  <goal>sign</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
